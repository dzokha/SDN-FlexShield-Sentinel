{
  "manifest_version": 3,
  "name": "SDN-FlexShield: Sentinel",
  "short_name": "FlexShield",
  "version": "1.0.0",
  "description": "Thành phần giám sát điểm cuối thuộc hệ sinh thái SDN-FlexShield Defender. Hỗ trợ phát hiện xâm nhập và phân tích an toàn mạng trong kỷ nguyên chuyển đổi số.",
  
  "permissions": [
    "activeTab", // Used only to analyze the currently visited URL for security indicators
    "storage",
    "scripting",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "host_permissions": [
    "https://dns.google/"
  ],

  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SDN-FlexShield: Sentinel Monitor",
    "default_icon": {
      "16": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  }
}